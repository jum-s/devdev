- if @twtlink.text == nil then
  redirect_to @twtlink.url
- else
  .row
    .jump
    .columns.medium-8.medium-centered.reading_box
      %br 
      %h3= @twtlink.title.html_safe
      - if @twtlink.image == nil
        = icon('tag')
        - @twtlink.tag.split(",").each do |tag|
          %p.inline.label
            = tag
      - else
        .columns.no-pad
          = image_tag(@twtlink.image) if @twtlink.image != nil
        = icon('tag')
        - @twtlink.tag.split(",").each do |tag|
          %p.inline.label= tag
      %p.source
        =link_to(icon('link') + " Source", @twtlink.url)
        |
        = @twtlink.created_at.strftime("%e %B %Y")
      %p
        = @twtlink.text.html_safe 
      %br
    %br
    = link_to("Accueil", root_path, class: "small button radius")
    = link_to("Articles Tweet√©s", twtlinks_path, class: "small button radius")
    = link_to("View Source", @twtlink.url, class: "small button radius")
