.row
  .columns.small-12.medium-6.large-4.big_title Vincent Jumeaux
  .columns.hide-for-small.medium-6.large-8.subtitle= t('tags')
  .jump
  %br
  %br
.row
  .columns.small-12.medium-8
    .quote_box
      %h3.heading= t('thought')
      %p
        #{icon('quote-left')} #{@pensee_random} #{icon('quote-right')}
    %hr
    .columns
      %h2.heading= link_to t('toread'), autoposts_path
      .text_box
        - @autoposts.each do |auto|
          = link_to auto.url do
            %h4.time_date
              = auto.pocket_date.strftime("%e %b.")
              |
              = icon('clock-o')
              #{get_reading_time(auto)}
              |
              #{get_sentiment(auto)}
              |
              - if auto.language == "english" && has_video(auto) != true
                = image_tag 'uk.png', size: '20x20', class: 'flag'
              - elsif auto.language == "french" && has_video(auto) != true
                = image_tag 'fr.png', size: '20x20', class: 'flag'
              - elsif has_video(auto) == true
                =icon 'youtube-play'
              - else
                = icon('question')
            %h3= auto.title
            - if auto.image == nil 
              = icon('tag')
              - auto.tag.split(",").each do |tag|
                %p.inline.label= tag
            - else
              .columns.crop.no-pad
                = image_tag(auto.image)
                .text
                  = icon('tag')
                  - auto.tag.split(",").each do |tag|
                    %p.inline.label= tag
            - if has_video(auto) == true
              .columns.medium-7
                .video_icon.button.radius.alert
                  = icon('play-circle-o')
                  = t('watchvideo')
              %br
            - else
              %p
                = strip_tags(auto.text.first(250)).html_safe
                [...]
          %hr
        .button.radius= t('moreautopost')
  .columns.small-12.medium-4.twt_box
    .columns
      %h3.heading 
        = t('twtlinks') 
        = icon('twitter')
      %small= link_to "Posted by @jumijums", "https://tweeter/Jumijums"
      - @twtlinks.each do |twt|
        = link_to twt.url do
          .time_date
            %br
            = twt.created_at.strftime("%e %b.")
            |
            #{get_sentiment(twt)}
            - if twt.language == "english" && has_video(twt) != true
              = image_tag 'uk.png', size: '20x20', class: 'flag'
            - elsif twt.language == "french" && has_video(twt) != true
              = image_tag 'fr.png', size: '20x20', class: 'flag'
            - elsif has_video(twt) == true
              =icon 'youtube-play'  
            - else
              = icon('question')
          %h4= twt.title
          - if twt.tag != ""
            = icon('tag') 
            - twt.tag.split(/,/).first(4).each do |tag|
              %p.inline.label= tag
          - if has_video(twt) == true
            .video_icon.button.radius.small
              = icon('play-circle-o')
              = t('watchvideo')
        %hr 
.row
  .columns.medium-6.reflexion_box
    %h2.heading= link_to t('food'), posts_path
  .columns.small-6.pull-3
    = link_to t('seeall'), posts_path, :class => "button tiny alert pull-right"
  - @posts.each do |post|
    .columns.bd-left
      %h4.time_date= post.created_at.strftime("%e %b")
      %h3.heading= post.title
      %p.p-1= post.text.html_safe