.jump
- @autoposts.each do |auto|
  .columns.small-12.medium-4.large-4.bd-left
    = link_to auto.url do
      %h4.source
        = auto.created_at.strftime("%e %b.")
        |
        = icon 'clock-o'
        = auto.reading_time
        #{get_sentiment(auto)}
        #{get_language(auto)}
      %h4
        %strong= auto.title
      - if auto.image =~ /\A#{URI::regexp(['http', 'https'])}\z/
        .columns.crop.no-pad
          = image_tag(auto.image)
      - else 
        %span.columns.crop.no-pad{:style => "background-color: #{random_color}"}
      - if auto.has_video
        .video_icon.button.radius.alert
          = icon('play-circle-o')
          = t('watchvideo')
      = icon('tag') if auto.tag
      - auto.tag.split(",").first(5).each do |tag|
        %p.inline.label= tag
      %p
        = strip_tags(auto.text.first(250)).html_safe
        [...]
