.jump
- @autoposts.each do |auto|
  .columns.small-12.medium-4.large-3
    %hr
    = link_to auto do
      %h4.source
        = auto.pocket_date.strftime("%e %b.")
        |
        = icon('clock-o')
        \~ #{get_reading_time(auto)}
        - if auto.sentiment == 1
          |
          = icon('smile-o')
          |
        - elsif auto.sentiment == 2
          |
          = icon('meh-o')
        - elsif auto.sentiment == 3
          = icon('frown-o')
      %h4
        %strong= auto.title
      - auto.tag.split(",").each do |tag|
        %p.inline.label= tag
      %p.p-1= auto.excerpt